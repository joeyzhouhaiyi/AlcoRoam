<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--transparent bg-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--no title -->
        <item name="android:windowNoTitle">true</item>
        <!--remove border-->
        <item name="android:windowFrame">@null</item>
        <!-- float on top of activity-->
        <item name="android:windowIsFloating">true</item>
        <!--Dim-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="AppTheme.PopMe">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="ShowcaseView_custom" parent="ShowcaseView.Light">
        <item name="sv_titleTextAppearance">@color/app_orange</item>
        <item name="sv_detailTextAppearance">@color/app_black</item>
        <item name="sv_backgroundColor">#D2000000</item>
        <item name="sv_buttonText">@string/empty</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/app_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>
