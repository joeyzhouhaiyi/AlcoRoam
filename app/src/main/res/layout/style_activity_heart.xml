<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HeartRate.HeartActivity"
    android:background="@drawable/login_bg">

    <TextView
        android:id="@+id/tv_rt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rt"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/app_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/rl_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:layout_margin="8dp"
        android:elevation="10dp"
        android:layout_below="@+id/tv_rt">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/gv_heart"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_margin="16dp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_graph"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_heart"
            android:scaleType="fitXY"
            android:elevation="6dp"/>
        <TextView
            android:id="@+id/hrValueView"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:gravity="center"
            android:text=""
            android:textSize="26sp"
            android:layout_gravity="center"
            android:layout_marginBottom="-10dp"
            android:textColor="@color/app_white"
            android:textStyle="bold"
            android:elevation="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="282dp" />
    </FrameLayout>

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/fl_heart"
        android:layout_marginTop="20dp">



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Heart Rate"
                android:id="@+id/heartRateBtn"
                android:background="@drawable/btn_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/app_white"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal Range: 70-90"
                android:textColor="@color/app_white"
                android:layout_gravity="center_horizontal"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Connection Status"
                android:textColor="@color/app_white"
                android:id="@+id/connectionStsView"
                android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>